{
  "name": "dlm-js",
  "version": "0.1.0",
  "description": "JavaScript re-implementation of the MATLAB dlm library using jax-js",
  "type": "module",
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "@jax-js/jax": "^0.1.0"
  },
  "dependencies": {
    "@jax-js/jax": "link:../jax-js"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^1.6.1"
  },
  "scripts": {
    "build": "vite build",
    "test:octave": "octave-cli --no-gui tests/octave/niledemo.m",
    "test:node": "vitest run tests/niledemo.test.ts",
    "test": "npm run test:octave && npm run test:node",
    "prepublishOnly": "npm run build && npm run test"
  },
  "main": "./dist/dlm-js.cjs.js",
  "module": "./dist/dlm-js.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/dlm-js.es.js",
      "require": "./dist/dlm-js.cjs.js"
    }
  }
}
