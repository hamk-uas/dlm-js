{
  "name": "dlm-js",
  "version": "0.1.0",
  "description": "JavaScript re-implementation of the MATLAB dlm library using jax-js",
  "type": "module",
  "files": [
    "dist"
  ],
  "dependencies": {
    "@jax-js-nonconsuming/jax": "github:hamk-uas/jax-js-nonconsuming"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@jax-js-nonconsuming/jax"
    ]
  },
  "devDependencies": {
    "@jax-js-nonconsuming/eslint-plugin-jax-js": "github:hamk-uas/jax-js-nonconsuming#path:packages/eslint-plugin&eslint-plugin-v0.1.0",
    "@types/node": "^25.0.10",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.31.0",
    "jiti": "^2.6.1",
    "typedoc": "^0.28.17",
    "typedoc-theme-fresh": "^0.2.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^1.6.1"
  },
  "scripts": {
    "build": "vite build",
    "lint": "eslint src/",
    "docs": "typedoc",
    "test:octave": "octave-cli --no-gui tests/octave/niledemo.m && octave-cli --no-gui tests/octave/gensys_tests.m",
    "test:node": "vitest run",
    "test": "pnpm run lint && pnpm run test:octave && pnpm run test:node",
    "prepublishOnly": "pnpm run build && pnpm run test"
  },
  "main": "./dist/dlm-js.cjs.js",
  "module": "./dist/dlm-js.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/dlm-js.es.js",
      "require": "./dist/dlm-js.cjs.js"
    }
  }
}
