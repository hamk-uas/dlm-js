{
  "$schema": "https://typedoc.org/schema.json",
  "entryPoints": ["src/index.ts"],
  "skipErrorChecking": true,
  "out": "docs",
  "name": "dlm-js",
  "readme": "README.md",
  "disableGit": true,
  "gitRevision": "main",
  "sourceLinkTemplate": "https://github.com/hamk-uas/dlm-js/blob/{gitRevision}/{path}#L{line}",
  "searchInDocuments": true,
  "searchInComments": true,
  "navigation": {
    "includeFolders": false
  },
  "plugin": ["typedoc-plugin-katex", "typedoc-theme-fresh"],
  "katex": {
    "options": {
      "delimiters": [
        {"left": "$$", "right": "$$", "display": true},
        {"left": "\\[", "right": "\\]", "display": true},
        {"left": "$", "right": "$", "display": false},
        {"left": "\\(", "right": "\\)", "display": false}
      ]
    }
  },
  "theme": "fresh"
}
